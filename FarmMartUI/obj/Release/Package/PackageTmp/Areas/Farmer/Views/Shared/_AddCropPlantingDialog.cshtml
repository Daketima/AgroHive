                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Plant Crop" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div><!-- /.box-body -->

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
