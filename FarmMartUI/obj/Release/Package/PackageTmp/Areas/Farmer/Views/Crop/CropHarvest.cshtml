@model FarmMartUI.Areas.Farmer.Models.FarmCropViewModel

@{
    ViewBag.Title = "Harvest";
    ViewBag.Controller = "Crops";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <div class="col-md-8" id="customer-orders">
        <div class="box">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Date Planted</th>
                            <th>Expected Harvest Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Harvest != null)
            {
                            <tr>
                                <td>#</td>
                                <td>@Model.Harvest.DatePlanted.ToShortDateString()</td>
                                <td>@Model.Harvest.ExpectedHarvestDate.ToShortDateString()</td>
                            </tr>

                        }
                        else
                        {
                            <tr>
                                <td><p>The farmer may not have planted this crop yet</p></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
