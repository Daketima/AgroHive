@model FarmMartUI.Areas.Farmer.Models.CropPriceViewModel

@{
    ViewBag.Title = "AddCropPrice";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

@section scripts{

    <!-- Slimscroll -->
    <script src="~/backend/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>

    <script src="~/backend/dist/js/app.min.js" type="text/javascript"></script>
    <script src="~/backend/dist/js/demo.js" type="text/javascript"></script>
}

    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Plant Crop</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm("AddCropPrice", "CropPrice", FormMethod.Post))
                    {
                        @Html.HiddenFor(model => model.FarmCropId)
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label col-md-3">Measurement:</label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(model => model.MeasurementId, Model.MeasurementDropDown, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.MeasurementId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Unit Price:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.UnitPrice, new { @class = "form-control", @placeholder = "The price of each crop per unit" })
                                    @Html.ValidationMessageFor(model => model.UnitPrice, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-9">
                                    <input type="submit" value="Add Crop Price" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }
                </div><!-- /.box-body -->
            </div><!-- /.box -->

        </div>
    </div>


