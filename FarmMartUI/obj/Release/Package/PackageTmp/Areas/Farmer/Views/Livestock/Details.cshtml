@model FarmMartUI.Areas.Farmer.Models.HomeViewModel

@{
    ViewBag.Title = "Livestock Price list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-8" id="customer-orders">
        <div class="box">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Unit</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.LivestockPrice != null)
                        {
                            var count = 0;
                            foreach (var cp in Model.LivestockPrice)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@cp.Measurement.Name</td>
                                    <td>@cp.UnitPrice</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>
                                    <p>Price is not available at this time</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
