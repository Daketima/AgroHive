@model FarmMartUI.Models.ProfileViewModel

@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Update Farm</h3>
            </div><!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
             
                    @Html.HiddenFor(model => model.ApplicationUserId)
                    <div class="form-horizontal">
                       
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                           <label for="CompanyName" class="control-label col-md-2"> Company Name</label> 
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.CompanyName,  new { @class = "form-control" } )
                                @Html.ValidationMessageFor(model => model.ThisUser.CompanyName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="CompanyName" class="control-label col-md-2">Email Address</label> 
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
