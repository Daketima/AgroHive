@model FarmMartUI.Models.CropViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}


<div class="row">
    <div class="col-md-8">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">My Farm</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table class="table  table-responsive">
                    <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.AllCrop.Any())
                        {
                            foreach (var f in Model.AllCrop)
                            {
                                <tr>
                                    <td style="width: 10px">#</td>
                                    @if (!string.IsNullOrEmpty(f.Photopath))
                                    {
                                        <td> <img src="~/CropProfile/@f.Photopath" /></td>
                                    }
                                    else
                                    {
                                        <td> <img src="~/Front/img/fm.jpg" /></td>
                                    }
                                    <td>@f.Name</td>
                                    <td>@f.Description</td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-danger">Actions</button>
                                            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                                                <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">

                                                <li><a href="@Url.Action("AddCrop", "Crop")" name="FarmCr" data-id="@f.Id">Add New</a></li>
                                                <li><a href="@Url.Action("EditCrop", "Crop", new { cropId = f.Id})">Edit</a></li>
                                                <li><a href="@Url.Action("DeleteCrop", "Crop")" name="FarmCr" data-id="@f.Id">Delete</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
            <div class="box-footer clearfix">
                <ul class="pagination pagination-sm no-margin pull-right">
                    <li><a href="#">&laquo;</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">&raquo;</a></li>
                </ul>
            </div>
        </div><!-- /.box -->
    </div>
</div>
