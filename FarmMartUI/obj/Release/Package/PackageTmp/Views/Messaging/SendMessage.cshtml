@model FarmMartUI.Models.MessagingViewModel

@{
    ViewBag.Title = "Send Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content">

    <div class="container">
        <div class="col-md-9">
            <div class="box">
                <h1>Compose a message</h1>
                <div class="content">
                    <div class="box">

                        @using (Html.BeginForm("SendMessage", "Messaging", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor( model => model.ToApplicationUserId)
                            @Html.HiddenFor(model => model.FromApplicationUserId)

                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                               <label class="control-label col-md-3">TO:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.ToPerson, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Subject:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                               <label for="MessageToPost" class="control-label col-md-3">Message</label>
                                <div class="col-md-8">
                                    @Html.TextAreaFor(m => m.MessageToPost, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-8">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i>Sende</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="box" id="order-summary">
                <div class="box-header">
                    <h3>Or Login Here!</h3>
                </div>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <input type="text" class="form-control" id="email-modal" name="Email" placeholder="email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="password-modal" name="Password" placeholder="password">
                    </div>

                            <p class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Log in</button>
                            </p>
                }
            </div>
        </div>
    </div>
</div>

