@model FarmMartUI.Models.FarmAddressViewModel



<div class="modal" role="dialog" id="formAddFarmAddressDialog" aria-hidden="true" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Add Farm Address</h4>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Create", "FarmAddress", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(model => Model.FarmId)
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label col-md-4">Full Address:</label>
                            <div class="col-md-8">
                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @placeholder = "Address" })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4">State:</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.StateId, Model.StateDropDown, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.StateId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Local Government:</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(m => m.LocalGovermentId, Model.LocalGovernmentAreaDropDown, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.LocalGovermentId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Longitude:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Longitude, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Longitude, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Latitude:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Latitude, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Latitude, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-8">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>

                    }
                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
